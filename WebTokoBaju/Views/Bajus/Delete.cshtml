@model WebTokoBaju.Data.Baju

@{
    ViewData["Title"] = "Delete";
}

<h1>Konfirmasi Hapus</h1>

<h3>Apakah anda yakin ingin menghapus baju dibawah ini?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NamaBaju)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NamaBaju)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Harga)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Harga)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdBaju" />
        <input type="submit" value="Hapus" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-info">Batal</a>
    </form>
</div>
